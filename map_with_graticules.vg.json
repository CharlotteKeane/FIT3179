{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Australia Participants by State and Age",
  "projection": {"type": "mercator"},
  "layer": [
    {
      "data": {
        "url": "Australia.topojson.json",
        "format": {"type": "topojson", "feature": "austates"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "Males.csv",
        "format": {"type": "csv"}
      },
      "mark": {"type": "circle", "stroke": "white", "opacity": 0.7},
      "encoding": {
        "longitude": {"field": "Lon", "type": "quantitative"},
        "latitude": {"field": "Lat", "type": "quantitative"},
        "size": {
          "field": "Value",
          "type": "quantitative",
          "title": "Value",
          "scale": {"range": [100, 2000]}
        },
        "color": {"field": "Age", "type": "nominal", "title": "Age Group"},
        "tooltip": [
          {"field": "State", "type": "nominal"},
          {"field": "Age", "type": "nominal"},
          {"field": "Value", "type": "quantitative"}
        ]
      }
    }
  ]
}
