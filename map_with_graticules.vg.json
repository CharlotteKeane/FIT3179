{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 600,
  "background": "#cce5ff",
  "title": {
    "text": "Australia - Male Participants by State and Age",
    "fontSize": 24,
    "anchor": "start"
  },
  "projection": {"type": "mercator"},
  "params": [
    {
      "name": "AgeSelection",
      "value": "15-17 years",
      "bind": {
        "input": "select",
        "options": [
          "All",
          "15-17 years",
          "18-24 years",
          "25-34 years",
          "35-44 years",
          "45-54 years",
          "55-64 years",
          "65 years and over"
        ],
        "name": "Select Age Group: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "Australia.topojson.json",
        "format": {"type": "topojson", "feature": "austates"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {"url": "Males.csv", "format": {"type": "csv"}},
      "transform": [
        {
          "filter": "(AgeSelection == 'All' || trim(toString(datum.Age)) == trim(toString(AgeSelection))) && datum.Sex == 'Male'"
        }
      ],
      "mark": {
        "type": "circle",
        "stroke": "white",
        "opacity": 0.8,
        "strokeWidth": 0.7
      },
      "encoding": {
        "longitude": {"field": "Lon", "type": "quantitative"},
        "latitude": {"field": "Lat", "type": "quantitative"},
        "size": {
          "field": "ParticipationRate",
          "type": "quantitative",
          "title": "Participation Rate",
          "scale": {"range": [100, 2500]}
        },
        "color": {
          "value": "#1f77b4",
          "title": "Male"
        },
        "tooltip": [
          {"field": "State", "type": "nominal"},
          {"field": "Age", "type": "nominal"},
          {
            "field": "ParticipationRate",
            "type": "quantitative",
            "title": "Participation Rate"
          }
        ]
      }
    },
    {
      "data": {
        "values": [
          {"state": "Western Australia", "lat": -25.5, "lon": 122},
          {"state": "Northern Territory", "lat": -19, "lon": 133},
          {"state": "South Australia", "lat": -30, "lon": 135},
          {"state": "Queensland", "lat": -21, "lon": 145},
          {"state": "New South Wales", "lat": -33, "lon": 147},
          {"state": "Victoria", "lat": -37, "lon": 144},
          {"state": "Tasmania", "lat": -42, "lon": 147}
        ]
      },
      "mark": {
        "type": "text",
        "fontSize": 12,
        "fontWeight": "bold",
        "color": "#000000",
        "dx": 0,
        "dy": -5
      },
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "text": {"field": "state"}
      }
    }
  ]
}
